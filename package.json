{
  "name": "wwm-gvg-strategy",
  "version": "1.6.0",
  "description": "Desktop app for planning guild-vs-guild battle strategy.",
  "author": "Will - MaiMaiYeuEm",
  "private": true,
  "main": "main.js",
  "scripts": {
    "electron": "electron main.js",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.wwm.gvg.strategy",
    "productName": "WWM GvG Strategy",
    "files": [
      "**/*",
      "!src-tauri/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "body-parser": "^2.2.2",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "puppeteer": "^24.37.5",
    "sqlite3": "^5.1.7"
  }
}
