{
  "name": "wwm-gvg-strategy",
  "version": "1.5.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.wwm.gvg.strategy",
    "productName": "WWM GvG Strategy",
    "files": [
      "**/*",
      "!src-tauri/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0"
  }
}
